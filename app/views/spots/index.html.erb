Hey! We have a shop! <%= link_to 'Click here!', controller: 'store', action: 'index' %>

<h1>Listing spots</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Address</th>
	<!-- 
    <th>Image url</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Gmaps</th>
	//-->
    <th>Description</th>
    <th>Rating</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @spots.each do |spot| %>
  <tr>
    <td><%= spot.title %></td>
    <td><%= spot.address %></td>
	<!-- 
    <td><%= spot.image_url %></td>
    <td><%= spot.latitude %></td>
    <td><%= spot.longitude %></td>
    <td><%= spot.gmaps %></td>
	//-->
    <td><%= spot.description %></td>
    <td><%= display_stars spot %></td>
    <td><%= link_to 'Show', spot %></td>
    <td><%= link_to 'Edit', edit_spot_path(spot) %></td>
    <td><%= link_to 'Destroy', spot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Spot', new_spot_path %>
<%= gmaps("map_options" => {"auto_adjust" => "true"},"markers" => {"data" => @json, "options" => {"list_container" => "markers_list", "randomize" => true, "max_random_distance" => 10000 } }) %>

<button id="replace_markers">Refresh Markers</button>
<ul id="markers_list">  </ul>
