<%= render :partial => @spot %>

<%= link_to 'Edit', edit_spot_path(@spot) %> |
<%= link_to 'Back', spots_path %>

<h2>Comments</h2>
<!-- Add comments //-->
<%= form_for [@spot, Comment.new] do |f| %>
  <p>
    <%= f.label :body, "New Comment" %><br />
    <%= f.text_area :body, rows: 6 %>
  </p>
  <p><%= f.submit "Add Comment" %></p>
<% end %>
<!-- Show comments //-->
<div id="comments">
  <%= render partial: @spot.comments.reverse %>
</div>
